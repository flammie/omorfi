#!/bin/bash
if test -z $srcdir ; then
    echo Use make check or define srcdir
    exit 1
fi
if test ! -r $srcdir/coverage-fast-alls.freqs ; then
    echo Missing $srcdir/coverage-fast-alls.freqs
    exit 77
fi
if test ! -r @top_builddir@/src/generated/ ; then
    echo Missing @top_builddir@/src/generated/
    exit 77
fi
if ! PYTHONPATH=$PYTHONPATH:@top_builddir@/src/python @PYTHON@ $srcdir/coverage.py -f ../src/generated/ -i coverage-fast-alls.freqs -c 1000 -o coverage-blort.log -t 90 ; then
    echo We missed the target of 90 % coverage
    exit 1
fi
exit 0
